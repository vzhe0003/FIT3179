{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/vzhe0003/FIT3179_assignment2/main/world-happiness-report-2021.csv"
  },
  "mark": {
    "type": "circle",
    "filled": true,
    "opacity": 0.7
  },
  "encoding": {
    "x": {
      "field": "Logged GDP per capita",
      "type": "quantitative",
      "title": "Logged GDP per capita",
      "scale": {"domain": [6, 12]}
    },
    "y": {
      "field": "Ladder score",
      "type": "quantitative",
      "title": "Happiness Score",
      "scale": {"domain": [2, 8.5]}
    },
    "color": {
      "field": "Regional indicator",
      "type": "nominal",
      "title": "Region"
    },
    "size": {
      "field": "Ladder score",
      "type": "quantitative",
      "title": "Happiness Score",
      "scale": {"range": [20, 700]}
    },
    "tooltip": [
      {"field": "Country name", "type": "nominal", "title": "Country"},
      {"field": "Ladder score", "type": "quantitative", "title": "Happiness Score"},
      {"field": "Logged GDP per capita", "type": "quantitative", "title": "Logged GDP per capita"},
      {"field": "Regional indicator", "type": "nominal", "title": "Region"}
    ]
  }
}