{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Health Life Expectancy 2021",
  "width": 800,
  "height": 400,
  "projection": { "type": "equalEarth" },
  "data": {
    "url": "https://raw.githubusercontent.com/vzhe0003/FIT3179_assignment2/main/ne_110m_admin_0_countries.json",
    "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/vzhe0003/FIT3179_assignment2/main/world-happiness-report-2021.csv"
        },
        "key": "Country name",
        "fields": ["Healthy life expectancy"]
      },
      "default": "grey"
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vzhe0003/FIT3179_assignment2/main/ne_50m_graticules_30.json",
        "format": { "type": "topojson", "feature": "ne_50m_graticules_30" }
      },
      "mark": { "type": "geoshape", "stroke": "lightgray", "strokeWidth": 1, "fill": null }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.7
      },
      "encoding": {
        "color": {
          "field": "Healthy life expectancy",
          "type": "quantitative",
          "scale": { "scheme": "viridis" }
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          { "field": "Healthy life expectancy", "type": "quantitative", "title": "Healthy Life Expectancy" }
        ]
      }
    }
  ],
  "config": {
    "legend": { "title": "Healthy Life Expectancy", "orient": "bottom-right" }
  }
}